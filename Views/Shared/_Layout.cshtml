                        <li>
                            <a class="tag_menu_1 active_tab" asp-action="index" asp-controller="Tblphotographers">HOME</a>
                        </li>

                        @if (@HttpContextAccessor.HttpContext.Session.GetString("cuname") == null && @HttpContextAccessor.HttpContext.Session.GetString("puname") == null)
                        {
                            <li>
                                <a class="tag_menu" asp-action="Photographerlogin" asp-controller="Tblphotographers">Photographer Login</a>
                            </li>
                        }
                        @if (@HttpContextAccessor.HttpContext.Session.GetString("puname") == null && @HttpContextAccessor.HttpContext.Session.GetString("cuname") == null)
                        {
                            <li>
                                <a class="tag_menu" asp-action="customerlogin" asp-controller="Tblcustomers">Customer Login</a>
                            </li>
                        }
                        @if (@HttpContextAccessor.HttpContext.Session.GetString("cuname") != null)
                        {
                            <li class="dropdown">
                                <a class="tag_menu" data-toggle="dropdown">Profile<span class="fa fa-caret-down"></span></a>
                                <ul class="dropdown-menu drop_1" style="min-width: 300px;">
                                    <li>
                                        <div class="row_1">
                                            <div class="col-sm-12">
                                                <h2> <a asp-action="edit" asp-controller="Tblcustomers">Edit Profile</a></h2>
                                                <br />
                                                <h2> <a asp-action="Details" asp-controller="Tblappointments">Appointments</a></h2>
                                                <br />
                                                <h2>  <a asp-action="logout" asp-controller="Tblphotographers">Logout</a></h2>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </li>
                        }
                        @if (@HttpContextAccessor.HttpContext.Session.GetString("puname") != null)
                        {
                            <li class="dropdown">
                                <a class="tag_menu" data-toggle="dropdown">Gallery<span class="fa fa-caret-down"></span></a>
                                <ul class="dropdown-menu drop_1" style="min-width: 300px;">
                                    <li>
                                        <div class="row_1">
                                            <div class="col-sm-12">

                                                <h2> <a asp-action="create" asp-controller="tblphotoes">Add Gallery</a></h2>
                                                <br />

                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a class="tag_menu" data-toggle="dropdown">Package<span class="fa fa-caret-down"></span></a>
                                <ul class="dropdown-menu drop_1" style="min-width: 300px;">
                                    <li>
                                        <div class="row_1">
                                            <div class="col-sm-12">

                                                <h2> <a asp-action="create" asp-controller="tblpackages">Add Package</a></h2>
                                                <br />
                                                <h2> <a asp-action="index" asp-controller="tblpackages">Edit Package</a></h2>
                                                <br />

                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a class="tag_menu" data-toggle="dropdown">AppointmentSlot<span class="fa fa-caret-down"></span></a>
                                <ul class="dropdown-menu drop_1" style="min-width: 300px;">
                                    <li>
                                        <div class="row_1">
                                            <div class="col-sm-12">

                                                <h2> <a asp-action="create" asp-controller="tblappointmentslots">Add AppointmentSlot</a></h2>
                                                <br />
                                                <h2> <a asp-action="index" asp-controller="tblappointmentslots">Edit AppointmentSlot</a></h2>
                                                <br />

                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a class="tag_menu" data-toggle="dropdown">Show Appointments<span class="fa fa-caret-down"></span></a>
                                <ul class="dropdown-menu drop_1" style="min-width: 300px;">
                                    <li>
                                        <div class="row_1">
                                            <div class="col-sm-12">
                                         
                                                <h2> <a asp-action="Index" asp-controller="Tblappointments">Show Appointments</a></h2>
                                                <br />
                                                
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a class="tag_menu" data-toggle="dropdown">Profile<span class="fa fa-caret-down"></span></a>
                                <ul class="dropdown-menu drop_1" style="min-width: 300px;">
                                    <li>
                                        <div class="row_1">
                                            <div class="col-sm-12">
                                                <h2> <a asp-action="Edit" asp-controller="Tblphotographers">Edit Profile</a></h2>
                                                <br />
                                               
                                                <h2>  <a asp-action="logout" asp-controller="Tblphotographers">Logout</a></h2>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </li>

                        }
                      

                      



                    </ul>

                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container-fluid -->
        </nav>
    </section>
    <section id="center">
        <div class="clearfix">
            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="~/#carousel-example-generic" data-slide-to="0" class="active"></li>
                    <li data-target="~/#carousel-example-generic" data-slide-to="1" class=""></li>
                    <li data-target="~/#carousel-example-generic" data-slide-to="2" class=""></li>
                </ol>
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="~/img/kis.jpg" alt="First slide">
                        <div class="carousel-caption">

                        </div>
                    </div>
                    <div class="item">
                        <img src="~/img/k.jpg" alt="Second slide">
                        <div class="carousel-caption">

                        </div>
                    </div>
                    <div class="item">
                        <img src="~/img/kis.jpg" alt="Third slide">
                        <div class="carousel-caption">


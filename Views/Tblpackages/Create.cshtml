@model WebApplication5.Models.Tblpackage

@{
    ViewData["Title"] = "Create";
}



<h2 align="center">Package</h2>

<div class="row">
    <div class="col-md-4">
        </div>
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
               
                <div class="form-group">
                    <label asp-for="Clicks" class="control-label"></label>
                    <input asp-for="Clicks" class="form-control" />
                    <span asp-validation-for="Clicks" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
